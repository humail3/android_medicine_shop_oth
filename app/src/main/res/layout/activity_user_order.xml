<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".UserOrderActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name :"
            android:visibility="invisible"
            android:textStyle="bold"
            android:textColor="#11CE52"/>

        <TextView
            android:id="@+id/txtorderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="name"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="125dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number :"
            android:textStyle="bold"
            android:visibility="invisible"
            android:textColor="#11CE52"/>

        <TextView
            android:id="@+id/txtorderphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Phone"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="68dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Date :"
            android:textStyle="bold"
            android:visibility="invisible"
            android:textColor="#11CE52"/>

        <TextView
            android:id="@+id/txtorderDilivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="delivery"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="80dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount :"
            android:textColor="#11CE52"
            android:textStyle="bold"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/txtorderRent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Price"
            android:textStyle="bold"
            android:layout_marginLeft="85dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btncancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cancel Order"
        android:layout_marginTop="40dp"
        android:onClick="cancelorder"
        android:visibility="invisible"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:layout_below="@id/txtorderRent"/>
    <TextView
        android:id="@+id/txtNoOrderYet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Order Yet"
        android:layout_gravity="center"
        android:textColor="#11CE52"
        android:textStyle="bold"
        android:visibility="visible"/>

