<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    card_view:cardElevation="16dp"
    android:layout_margin="4dp"
    android:padding="10dp"
    card_view:cardCornerRadius="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/productImage_fav"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/edresslogo" />
            <TextView
                android:id="@+id/productName_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/productImage_fav"
                android:layout_marginTop="10dp"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/productRent_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total price"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:layout_below="@id/productName_fav"/>
            <TextView
                android:id="@+id/productDiscription_fav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="description"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:layout_below="@id/productRent_fav"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/productDiscription_fav"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/placeOrderbtn"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Place"
                    android:textAllCaps="false"
                    android:layout_marginTop="5dp"

                    />
                <Button
                    android:id="@+id/cancerOrderBtn"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Remove Favorite"
                    android:textAllCaps="false"
                    android:textColor="#F00C42"

                    android:layout_below="@id/productDiscription_fav"
                    />
            </LinearLayout>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>